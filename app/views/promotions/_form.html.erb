
<%= form_for([current_shop_owner, promotion]) do |f| %>
  <% if promotion.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(promotion.errors.count, "error") %> prohibited this promotion from being saved:</h2>

      <ul>
      <% promotion.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.hidden_field :shop_owner_id, value: current_shop_owner.id %>
  </div>

  <div class="field">
    <%= f.label :english_promo %>
    <%= f.text_field :english_promo %>
  </div>

  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <div class="field">
     <%= f.label :send_time %>
     <%= f.datetime_field :send_time %>
   </div>

   <div class="field">
     <%= label_tag "Select Customers" %>
     <%= collection_select :customer, :id,
       current_shop_owner.customers, :id, :name,
       {prompt: "Select a customer"},
       {multiple: true} %>
   </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
